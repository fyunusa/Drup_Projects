#: import utils kivy.utils

<scheduler_page>:
    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'Scheduler'
            md_bg_color: .2,.2,.2,1
            specific_text_color: 1,1,1,1
            icon: 'accounts-list'

        MDBottomNavigation:
            #color stuff
            panel_color:.2,.2,.2,1

            MDBottomNavigationItem:
                name:'Scheduler'
                text: 'Scheduler'
                icon: 'account-box'
                on_tab_press: root.pressed_button_const("Scheduler")

#----------------------------------------------------------------------------#
                MDBoxLayout:
                    size_hint: None, None
                    size: 700, 700
                    pos_hint: {"center_x" : 0.5, "center_y": 0.29}
                    #elevation: 10
                    padding: 25
                    spacing: 25
                    orientation: 'vertical'

                    MDTextFieldRound:
                        id: Day
                        hint_text: "Day e.g monday"
                        icon_left: "account"
                        size_hint_x: None
                        width: 500
                        font_size: 18
                        pos_hint: {"center_x": 0.5}

                    MDTextFieldRound:
                        id: Start_time
                        hint_text: "Start Time e.g 07:00"
                        icon_left: "account"
                        size_hint_x: None
                        width: 500
                        font_size: 18
                        pos_hint: {"center_x": 0.5}

                    MDTextFieldRound:
                        id: End_time
                        hint_text: "End Time e.g 04:00"
                        icon_left: "account"
                        size_hint_x: None
                        width: 500
                        font_size: 18
                        pos_hint: {"center_x": 0.5}

                    MDTextFieldRound:
                        id: course_code
                        hint_text: "course_code e.g TME411"
                        icon_left: "account"
                        size_hint_x: None
                        width: 500
                        font_size: 18
                        pos_hint: {"center_x": 0.5}
                    
                    MDTextFieldRound:
                        id: course_title
                        hint_text: "Course Title e.g operation research"
                        helper_text_mode: "on_error"
                        icon_left: "account"
                        size_hint_x: None
                        width: 500
                        font_size: 18
                        pos_hint: {"center_x": 0.5}
                    
                    MDTextFieldRound:
                        id: credit_unit
                        hint_text: "credit_unit"
                        icon_left: "account"
                        size_hint_x: None
                        width: 500
                        font_size: 18
                        pos_hint: {"center_x": 0.5}
                    
                    MDGridLayout:
                        cols: 2
                        spacing: 30
                        padding: 20
                        pos_hint: {"center_x" : 0.8, "center_y": 0}

                        MDRoundFlatButton:
                            text: "SUBMIT"
                            font_size: 12
                            #pos_hint: {"center_x": 0.5}
                            on_press: root.pressed_button_submit()
                            background_normal: ''
                            background_color: utils.get_color_from_hex('#eefa00')

                        MDRoundFlatButton:
                            text: "CLEAR"
                            font_size: 12
                            #pos_hint: {"center_x": 0.5}
                            #on_press: root.signup_clear()
                            background_normal: ''
                            background_color: (0,0,1,1)

#----------------------------------------------------------------------------#
            MDBottomNavigationItem:
                name:'UserMenu'
                text: 'UserMenu'
                icon: 'account-box'
                on_tab_press: root.pressed_button_usermenu("UserMenu")

            MDBottomNavigationItem:
                name:'Calendar'
                text: 'Calendar'
                icon: 'calendar'
                on_tab_press: root.pressed_button_calendar("Calendar")

            MDBottomNavigationItem:
                name:'TimeTable'
                text: 'TimeTable'
                icon: 'folder'
                on_tab_press: root.pressed_button_timetable("TimeTable")

            MDBottomNavigationItem:
                name:'Assignments'
                text: 'Assignments'
                icon: 'file'
                on_tab_press: root.pressed_button_assignment("Assignment")